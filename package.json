{
  "name": "template_backend",
  "version": "1.0.0",
  "description": "![Create Tag & Release After Dev Deploy](https://github.com/ModFi/##REPO##/workflows/Create%20Tag%20&%20Release%20After%20Dev%20Deploy/badge.svg) ![Update Service From Release](https://github.com/ModFi/##REPO##/workflows/Update%20Service%20From%20Release/badge.svg)",
  "main": ".eslintrc.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "assets": "mkdir -p ./dist/assets && cp -r ./docs/* ./dist/ && chmod 777 ./dist/*",
    "tsc": "npm run clean && ./node_modules/.bin/tsc  && [ -f ./dist/index.js ] && echo 'dist/index.js exists.'",
    "dev": "npm run tsc && NODE_ENV=development nodemon ./dist/index.js",
    "ts": "NODE_ENV=development ./node_modules/.bin/ts-node-dev src/index.ts",
    "prod": "npm run tsc && export NODE_ENV=production && nodemon ./dist/index.js",
    "lint": "./node_modules/.bin/eslint --fix  src/ --ext .js,.ts",
    "test:unit": "NODE_ENV=test mocha -r ts-node/register 'test/unit/**/*.test.ts' --timeout 50000",
    "test:feature": "NODE_ENV=development mocha -r ts-node/register 'test/feature/**/*.test.ts' --timeout 50000",
    "test": "npm run test:unit && npm run test:feature"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fbuinosquy/template_backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fbuinosquy/template_backend/issues"
  },
  "homepage": "https://github.com/fbuinosquy/template_backend#readme",
  "dependencies": {
    "@modfi/backend-utils": "0.0.17",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.6",
    "express-validator": "^6.10.0",
    "helmet": "^4.4.1",
    "inversify": "^5.0.5",
    "inversify-express-utils": "^6.3.2",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.4",
    "mocha": "^8.3.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "reflect-metadata": "^0.1.13",
    "sinon-express-mock": "^2.2.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-http": "^4.2.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/jwk-to-pem": "^2.0.0",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.36",
    "@types/sinon-express-mock": "^1.3.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
